<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="#f27a24"
                android:startColor="#f27a24"
                android:type="linear" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="#f27a24"
                android:startColor="#f27a24"
                android:type="linear" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="#A6A6A6"
                android:startColor="#8F8F8F"
                android:type="linear" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="#f27a24"
                android:startColor="#f27a24"
                android:type="linear" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="#f27a24"
                android:startColor="#f27a24"
                android:type="linear" />
            <corners android:radius="10dp" />
        </shape>
    </item>

</selector>