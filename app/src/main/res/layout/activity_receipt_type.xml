<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.common.receipttype.ReceiptTypeActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            fontPath="fonts/Roboto-Medium.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Select Receipt To Print"
            android:textColor="@color/color_text_primary_dark_1"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrintMer"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradient_primary_btn_bg"
            android:elevation="9dp"
            android:fontFamily="@font/roboto_regular"
            android:letterSpacing="0"
            android:text="@string/print_merchant_copy"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            />



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrintCus"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/gradient_primary_btn_bg"
                android:elevation="9dp"
                android:fontFamily="@font/roboto_regular"
                android:letterSpacing="0"
                android:text="@string/print_customer_copy"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:backgroundTint="@null"
                app:elevation="9dp"

                app:layout_constraintTop_toBottomOf="@+id/btnPrintMer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


